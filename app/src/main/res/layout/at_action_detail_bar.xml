<?xml version="1.0" encoding="utf-8"?>
<co.favorie.at.customview.ATActionDetailBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="86dp"
    android:background="@color/default_background">

    <Button
        android:layout_width="60dp"
        android:layout_height="66dp"
        android:id="@+id/at_action_detail_bar_button_right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/at_actionbar_button_done_gray"
        android:layout_alignParentEnd="true"/>

    <co.favorie.at.customview.ATCustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/at_action_detail_bar_textview"
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <ImageView
        android:layout_width="77dp"
        android:layout_height="37dp"
        android:id="@+id/at_action_detail_bar_imageview"
        android:layout_centerInParent="true"
        android:src="@drawable/at_actionbar_logo_plus"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="67dp"
        android:id="@+id/at_action_detail_bar_button_left"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/button_back_white"/>
</co.favorie.at.customview.ATActionDetailBar>