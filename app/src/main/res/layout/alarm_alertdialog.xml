<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4DFBA"
    android:orientation="vertical">

    <TextView
        android:id="@+id/alarm_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/alarm_top_one_plus_one"
        android:textColor="@color/white"
        android:textSize="20sp" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/alarm_imageCharacter"
            android:layout_width="61dp"
            android:layout_height="81dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/characterbartsimpson" />

        <ImageView
            android:id="@+id/alarm_imageCharacter_next"
            android:layout_width="61dp"
            android:layout_height="81dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@+id/alarm_imageCharacter"
            android:src="@drawable/characterharry"
            android:visibility="gone" />
    </RelativeLayout>

    <Button
        android:id="@+id/alarm_ok"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/progressbar_red"
        android:text="@string/alarm_ok"
        android:textColor="@color/white" />


</LinearLayout>